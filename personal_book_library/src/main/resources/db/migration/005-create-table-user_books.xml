<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="005-create-table-user_books" author="ivanprivalov">
        <createTable tableName="user_books" schemaName="personal_book_library">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="book_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_userbook_book"
                             referencedTableSchemaName="personal_book_library"
                             referencedTableName="catalog_books"
                             referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_userbook_user"
                             referencedTableSchemaName="personal_book_library"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="rating" type="integer"/>
            <column name="read_status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="user_books"
                             schemaName="personal_book_library"
                             columnNames="book_id, user_id"
                             constraintName="uq_user_book"/>
    </changeSet>

</databaseChangeLog>