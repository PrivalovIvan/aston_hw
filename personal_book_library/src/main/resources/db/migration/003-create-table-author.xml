<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="003-create-table-author" author="ivanprivalov">
        <createTable tableName="authors" schemaName="personal_book_library">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="authors" schemaName="personal_book_library" indexName="idx_authors_id" unique="true">
            <column name="id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>